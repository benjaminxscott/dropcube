
<% if !@upload_file.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @upload_file.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>

<div class = "well">
   <%= form_for @upload_file, html: { multipart: true } do |f| %>
      <%= f.label "Choose a File" %>
      <%= f.file_field :attachment %>
      <%= f.submit "Upload", class: "btn btn-primary" %>
   <% end %>
</div>