<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "Upload a File", new_upload_file_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Filename</th>
         <th>Filesize </th>
         <th>SHA256 Digest</th>
         <th> </th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @upload_files.each do |upload_file| %>
         
         <tr>
            
            <td>
               <%= form_for upload_file, url: {action: "rename"}, html: {class: "input_form"} do |f| %>
               <%= f.text_field :filename  %>
               <%= f.hidden_field :id, :value => upload_file.id %>
               <% end %>
            </td>
               
            <td><%= upload_file.filesize %> KiB </td>
            <td><%= upload_file.digest %> </td>
            <td><%= link_to "Download", upload_file.attachment_url, download: upload_file.filename %></td>
            <td><%= button_to "Delete",  upload_file, method: :delete %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>